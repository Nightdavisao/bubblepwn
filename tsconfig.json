{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./src"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}